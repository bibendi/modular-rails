<table
  width="100%"
  cellpadding="0"
  cellspacing="0"
  style="border: 0;
         padding: 0;
         border-spacing: 0;"
>
  <tbody>
    <tr>
      <td align="<%=
        if action[:align]
          action[:align]
        else
          "left"
        end
        %>"
      >
        <table>
          <tbody>
            <%= render "shared/mailer/action", action: action %>
          </tbody>
        </table>
      </td>
    </tr>
  </tbody>
</table>
