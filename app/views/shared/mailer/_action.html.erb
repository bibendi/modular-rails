<tr>
  <td
    width="100%"
    height="64"
  >
    <table
      border="0"
      cellpadding="0"
      cellspacing="0"
      bgcolor="#FFFFFF"
      style="border: 0;
            padding: 0;
            border-spacing: 0;
            background: #FFFFFF;"
    >
      <tbody>
        <tr>
          <td width="30">&nbsp;</td>

          <td>
            <a
              href="<%= action[:url] %>"
              target="_blank"
              style="display: block;
                     height: 16px;
                     margin: 22px 0;
                     font-family: Helvetica Neue, Helvetica, sans-serif;
                     font-size: 16px;
                     line-height: 16px;
                     color: #1F1F1F;
                     text-decoration: none;
                     text-align: center;"
              mc:disable-tracking
            >
              <b><%= action[:label] %></b>
            </a>
          </td>

          <td width="30">&nbsp;</td>
        </tr>
      </tbody>
    </table>
  </td>
</tr>

<% unless action[:skip_margin] %>
  <tr>
    <td
      width="100%"
      height="64"
    >&nbsp;</td>
  </tr>
<% end %>
